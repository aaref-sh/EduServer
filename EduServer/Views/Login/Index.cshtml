@model EduServer.Models.teacher

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>تسجيل الدخول</title>
    <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Arimo' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Hind:300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="../Content/style1.css">
</head>
<body dir="rtl">
    <!-- partial:index.partial.html -->
    <div id="login-button">
        <img src="@Url.Content("~/img/login-w-icon.png")"/>
    </div>
    @using (Html.BeginForm())
                            {
        @Html.AntiForgeryToken()
    
            <div id="container">
                <h1>تسجيل الدخول</h1>
                <span class="close-btn">
                    <img src="@Url.Content("~/img/circle_close_delete_-128.png")"/>
                </span>
                <form>
                    <input type="text" name="name" id="namev" placeholder="اسم المستخدم">
                    <input type="password" name="pass" id="passv" placeholder="كلمة المرور">
                    <input name="submit" type="submit" id="login" value="تسجيل الدخول" style="font-family: 'Open Sans Condensed', sans-serif;
            text-align: center;
            padding: 4px 8px;
            background: rgba(107,255,3,0.3);" />
                </form>
            </div>
    
        }
    <!-- partial -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/gsap/1.16.1/TweenMax.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="../Scripts/script.js"></script>
</body>
</html>
