@model EduServer.Models.request

@{
    ViewBag.Title = "تعديل طلب";
}

<h2>تعديل</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>طلب</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)
        <div style="display :none">

            <div class="form-group">
                @Html.LabelFor(model => model.requester, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("requester", String.Empty)
                    @Html.ValidationMessageFor(model => model.requester)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.request_type, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("request_type", String.Empty)
                    @Html.ValidationMessageFor(model => model.request_type)
                </div>
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("status", String.Empty)
                @Html.ValidationMessageFor(model => model.status)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("الرجوع للقائمة", "Index")
</div>
